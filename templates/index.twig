{% block title %}Accueil
{% endblock %}


{% block main %}
<div class="container">
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
		<h1 class="h2">Dasboard</h1>
		<div class="btn-toolbar mb-2 mb-md-0">
			<div class="btn-group me-2">
				<a class="btn btn-sm btn-outline-primary" href="create_produit.php">Ajouter un Pays</a>
			</div>
		</div>
	</div>
	<table class="table">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Image</th>
				<th scope="col">Pays</th>
					<th scope="col">Ville</th>
				<th scope="col">Description</th>
				<th scope="col">Conttinent</th>
				<th scope="col">Note</th>
				<th scope="col">Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for produit in produits %}
				<tr>
					<th scope="row">{{ produit.id }}</th>
					<td><img src="./images/{{ produit.image }}" class="img-fluid" alt="{{ produit.nom }}" style="max-height: 50px;"/></td>
					<td>{{ produit.nom }}</td>
					<td>{{ produit.ville }}</td>
					<td class="text-truncate" style="max-width: 150px;">{{ produit.description }}</td>
					<td>{{ produit.type }}</td>
					<td>{{ produit.note }}
						/10</td>
					<td>
						<div class="btn-group me-2">
											<a href="update_produit.php?id={{ produit.id }}" class="btn btn-warning">Modifier</a>
													<a href="delete_produit.php?id={{ produit.id }}" class="btn btn-danger">Supprimer</a>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	</div>


